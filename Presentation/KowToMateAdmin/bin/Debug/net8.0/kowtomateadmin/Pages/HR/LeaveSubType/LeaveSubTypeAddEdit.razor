    <label class="col-sm-4 col-form-label fw-bold">Is Active</label>
    <div class="col-sm-8">
        <label class="form-check-label mt-2" for="IsActive">
            <InputCheckbox @bind-Value="leaveSubType.IsActive" id="IsActive" class="form-check-input"></InputCheckbox>
        </label>
        <ValidationMessage For="@(() =>leaveSubType.IsActive)" />
